@model dynamic
@{
    ViewData["Title"] = "HaberSitesi";
}
<div class="row">
    <video controls class="mt-3">
        <img src="@Model[1]["primaryImage"]" class="img-fluid" />
        <source src="@Model[1]["VideoUrl"]" type="video/mp4">
    </video>
    <div class="col-6 mt-5">
        <h2 class="text-center">
            @(Model[1]["TitleShort"] != null ? Model[1]["TitleShort"] : Model[1]["Title"])
        </h2>
        <p>
            @Model[1]["Spot"]
        </p>
    </div>
    <div class="col-6 d-flex flex-column text-end mt-4">
        @{
            string outputDate = Model[1]["OutputDate"];
            string[] timeArr = outputDate.Split(' ');
            <p><strong>@(timeArr[1])</strong></p>
            <p><strong>@timeArr[2]</strong></p>
        }

    </div>
    @{
        for (int i = 2; i < 10; i++)
        {
            try
            {
                <div class="col-3 mt-3">
                    <a href="https://www.google.com/search?q= @(Model[i]["Url"])" target="_blank">
                        <img src=@Model[i]["secondaryImage"] class="img-fluid mt-5" />
                    </a>
                </div>
            }
            catch (Exception)
            {
                <div class="col-3 mt-3">
                </div>
            }

        }
    }
</div>


